<h1 class="page-header">
  <%= @article.title.upcase %>
</h1>

<p class="lead">
  <%= @article.short_description %>
</p>

<% if has_body(@article) %>
  <p>
    <%= @article.body %>
  </p> 
<% end %>

<% if has_tags(@article) %>
  <% @article.tag_list.each do |tag| %>
    <button id="search-query" class="btn btn-warning btn-xs" onclick="searchArticles('<%= tag %>')"><%= tag %></button>
  <% end %>
<% end %>

<%= render partial: "comment_form" %>
